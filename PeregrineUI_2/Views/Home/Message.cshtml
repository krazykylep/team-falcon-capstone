@model PeregrineUI_2.Models.PageData<PeregrineUI_2.Models.Message>

<script type="text/javascript">
    
    $(document).ready(function () {
        more_info_accumulate_page = @(Model.CurrentPage);
    });
    
</script>
 
 <input class="ui_button" type="button" value="Show Jobs" onclick="show_job(1, $('#fixed_info_tab').data('process_name'))"/>

 <table class = "msg_table">
        <thead>
            <tr>
                <td>Message Content </td>
                <td>Priority </td>
                <td>Category </td>
                <td>Date </td>
            </tr>
        </thead>     
        <tbody>
            @foreach (var message in Model.Data)
            {
                <tr>
                    <td>@message.Content </td>
                    <td>@message.Priority </td>
                    <td>@message.Category </td>
                    <td>@message.Date.ToString("yyyy-MM-dd HH:mm tt") </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">
                    <div style="text-align: center;"><input type="button" class="ui_button" value="Load More" onclick="show_message((more_info_accumulate_page+1), $('#fixed_info_tab').data('process_name'))" /></div>
                </td>
            </tr>
        </tfoot>
</table>